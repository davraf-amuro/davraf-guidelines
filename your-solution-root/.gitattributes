# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files
*.cs text eol=lf diff=csharp
*.csx text eol=lf diff=csharp
*.vb text eol=lf
*.resx text eol=lf
*.c text eol=lf diff=cpp
*.cpp text eol=lf diff=cpp
*.h text eol=lf diff=cpp
*.hpp text eol=lf diff=cpp
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.config text eol=lf
*.csproj text eol=lf
*.vbproj text eol=lf
*.sln text eol=crlf
*.props text eol=lf
*.targets text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.sql text eol=lf

# Windows-specific files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.dll binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pdf binary

# Denote all files that are truly binary and should not be modified
*.pfx binary
*.snk binary
